<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var banners = getBanners();
        var feature_items = getFeatureList();
        var popup = getPopups()[0];
        renderBanner('#banner_template','#home_banner',banners);
        // var temp_feature = {};
        // temp_feature.image_url = "//codecloud.cdn.speedyrails.net/sites/59a03e9f6e6f64651d140000/image/jpeg/1527187958770/psc_phone_600x320_2.jpg";
        // temp_feature.url = "/online_offers";
        // feature_items.push(temp_feature);
        renderFeatureItems('#feature_container','#feature_template', feature_items);
        $('.flexslider').flexslider({
            animation: "fade",
        });
        show_content();
        if(popup != undefined && $.cookie("popup_viewed") != "true"){
            renderPopUp("#popup_container", "#popup_template", popup)
            $.cookie("popup_viewed", "true");
            $('<div class="modal-backdrop custom_backdrop"></div>').appendTo(document.body);
            $('.popup_home').show()
        }
        $('.close_popup, .custom_backdrop').click(function(){
            $(".modal-backdrop").remove();
	        $(".popup_home").remove();
        })
    }
    
    
    
</script>